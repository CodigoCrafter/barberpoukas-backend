# Configuração do Banco de Dados (Supabase/Neon/Render)
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Segurança (Gere chaves aleatórias fortes)
JWT_SECRET="sua-chave-secreta-para-tokens-jwt"
REFRESH_SECRET="sua-chave-secreta-para-refresh-tokens"

# Porta do Servidor (O Render define isso automaticamente, mas bom ter padrão)
PORT=4000

